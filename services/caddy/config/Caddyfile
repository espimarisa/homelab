###########################################################################
# Catch-all block to reduce spam and annoyance. (MUST BE LAST!)           #
###########################################################################

* {
	# Log and abort any requests that don't match the sites above.
	log {
		output file /caddy/logs/unmatched.log {
			roll_keep 5
			roll_keep_for 720h
			roll_size 10mb
		}
	}

	abort
}
