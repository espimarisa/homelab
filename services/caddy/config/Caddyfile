# Internal healthcheck endpoint.
:3000 {
	respond "OK" 200
}

# Global catch-all for unhandled traffic.
* {
	handle {
		abort
	}

	# Log unhandled traffic to unhandled-access.log.
	import logging unhandled-access
}
